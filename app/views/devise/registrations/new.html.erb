<h2>Who are you?</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :message, label: 'Your Message', placeholder: 'Keep up the great work!' %>
  <%= f.input :phone %>
  <%= f.input :time, label: 'Time (PST)', placeholder: 'When should we call?' %>
  <%= f.input :frequency, placeholder: 'How often?' %>
  <%= f.input :email %> 
  <%= f.input :password %>


  <div class="form-actions">
    <%= f.submit "Get Contacted", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
